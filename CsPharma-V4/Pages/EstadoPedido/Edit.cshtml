            <div class="form-group">
                <label asp-for="TdcTchEstadoPedido.CodEstadoEnvioNavigation.DesEstadoEnvio" class="control-label"></label>
                <select asp-for="TdcTchEstadoPedido.CodEstadoEnvioNavigation.DesEstadoEnvio" class="form-control" asp-items="ViewBag.CodEstadoEnvioNavigation.DesEstadoEnvio"></select>
                <span asp-validation-for="TdcTchEstadoPedido.CodEstadoEnvioNavigation.DesEstadoEnvio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TdcTchEstadoPedido.CodEstadoPagoNavigation.DesEstadoPago" class="control-label"></label>
                <select asp-for="TdcTchEstadoPedido.CodEstadoPagoNavigation.DesEstadoPago" class="form-control" asp-items="ViewBag.CodEstadoPagoNavigation.DesEstadoPago"></select>
                <span asp-validation-for="TdcTchEstadoPedido.CodEstadoPagoNavigation.DesEstadoPago" class="text-danger"></span>
