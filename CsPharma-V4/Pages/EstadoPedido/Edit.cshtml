            <div class="form-group">
                <label asp-for="TdcTchEstadoPedido.CodEstadoDevolucionNavigation.DesEstadoDevolucion" class="control-label"></label>
                <select asp-for="TdcTchEstadoPedido.CodEstadoDevolucionNavigation.DesEstadoDevolucion" class="form-control" asp-items="ViewBag.CodEstadoDevolucionNavigation.DesEstadoDevolucion"></select>
