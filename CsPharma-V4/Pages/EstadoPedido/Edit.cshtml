        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TdcTchEstadoPedido.Id" />
            <div class="form-group">
                <label asp-for="TdcTchEstadoPedido.MdUuid" class="control-label"></label>
                <input asp-for="TdcTchEstadoPedido.MdUuid" class="form-control" />
