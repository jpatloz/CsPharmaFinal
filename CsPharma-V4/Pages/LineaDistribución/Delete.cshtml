@page
@model CsPharma_V4.Pages.LineaDistribución.DeleteModel

@{
    ViewData["Title"] = "Eliminar";
}

<!-- Página para eliminar una fila de las líneas de distribución -->

<h1>Eliminar</h1>

<h3>¿Está seguro de que quiere eliminarlo?</h3>
<div>
    <h4>Líneas de distribución</h4>
    <hr />

    <!-- Despliegue de la información a eliminar-->
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TdcCatLineasDistribucion.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TdcCatLineasDistribucion.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TdcCatLineasDistribucion.MdDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TdcCatLineasDistribucion.MdDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TdcCatLineasDistribucion.MdUuid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TdcCatLineasDistribucion.MdUuid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TdcCatLineasDistribucion.CodProvincia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TdcCatLineasDistribucion.CodProvincia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TdcCatLineasDistribucion.CodMunicipio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TdcCatLineasDistribucion.CodMunicipio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TdcCatLineasDistribucion.CodBarrio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TdcCatLineasDistribucion.CodBarrio)
        </dd>
    </dl>

    <!-- Formulario para eliminar los campos dándole al botón -->
    <form method="post">
        <input type="hidden" asp-for="TdcCatLineasDistribucion.CodLinea" />
        <input type="submit" value="Eliminar"/> |
        <!-- Link para volver al index-->
        <a asp-page="./Index">Volver</a>
    </form>
</div>
