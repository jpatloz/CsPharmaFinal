@page
@model CsPharma_V4.Pages.DevoluciónPedido.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Estado de devolución del pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TdcCatEstadosDevolucionPedido.CodEstadoDevolucion" />
            <div class="form-group">
                <label asp-for="TdcCatEstadosDevolucionPedido.MdUuid" class="control-label"></label>
                <input asp-for="TdcCatEstadosDevolucionPedido.MdUuid" class="form-control" />
                <span asp-validation-for="TdcCatEstadosDevolucionPedido.MdUuid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TdcCatEstadosDevolucionPedido.MdDate" class="control-label"></label>
                <input asp-for="TdcCatEstadosDevolucionPedido.MdDate" class="form-control" />
                <span asp-validation-for="TdcCatEstadosDevolucionPedido.MdDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TdcCatEstadosDevolucionPedido.CodEstadoDevolucion" class="control-label"></label>
                <input asp-for="TdcCatEstadosDevolucionPedido.CodEstadoDevolucion" class="form-control" />
                <span asp-validation-for="TdcCatEstadosDevolucionPedido.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TdcCatEstadosDevolucionPedido.DesEstadoDevolucion" class="control-label"></label>
                <input asp-for="TdcCatEstadosDevolucionPedido.DesEstadoDevolucion" class="form-control" />
                <span asp-validation-for="TdcCatEstadosDevolucionPedido.DesEstadoDevolucion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
