@page
@model CsPharma_V4.Pages.PagoPedido.CreateModel

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Estado de pago del pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TdcCatEstadosPagoPedido.CodEstadoPago" class="control-label"></label>
                <input asp-for="TdcCatEstadosPagoPedido.CodEstadoPago" class="form-control" />
                <span asp-validation-for="TdcCatEstadosPagoPedido.CodEstadoPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TdcCatEstadosPagoPedido.MdUuid" class="control-label"></label>
                <input asp-for="TdcCatEstadosPagoPedido.MdUuid" class="form-control" />
                <span asp-validation-for="TdcCatEstadosPagoPedido.MdUuid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TdcCatEstadosPagoPedido.MdDate" class="control-label"></label>
                <input asp-for="TdcCatEstadosPagoPedido.MdDate" class="form-control" />
                <span asp-validation-for="TdcCatEstadosPagoPedido.MdDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TdcCatEstadosPagoPedido.DesEstadoPago" class="control-label"></label>
                <input asp-for="TdcCatEstadosPagoPedido.DesEstadoPago" class="form-control" />
                <span asp-validation-for="TdcCatEstadosPagoPedido.DesEstadoPago" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
